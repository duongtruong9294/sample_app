<% if @user.errors.any? %>
  <div class ="error_explanation">
    <div class="alert alert-danger">
      <%= t ".text" %> <%= t ".error", count: @user.errors.size %>.
    </div>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
